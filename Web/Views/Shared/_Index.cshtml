@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-5 col-md-6 col-sm-12">
            <h2 id="pageHeader">
               
                <small></small>
            </h2>
        </div>
        <div class="col-lg-7 col-md-6 col-sm-12 text-right">
            <form id="createForm" >
                <button class="btn btn-white btn-icon btn-round hidden-sm-down float-right m-l-10" type="submit" id="btnCreate">
                    <i class="zmdi zmdi-plus">Add</i>
                </button>
            </form>
            <ul class="breadcrumb float-md-right" id="breadcrumb">
                <li class="breadcrumb-item"><a href=""><i class="zmdi zmdi-home"></i> Home</a></li>                
                <li class="breadcrumb-item active" id="leafController"></li>
            </ul>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card action_bar">
                
                <div class="body">
                    <form id="searchForm">
                        <div class="row clearfix" id="filterFieldsPanel">

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="body table-responsive">
                    <div class="col-md-12 text-right" style="display:none" id="DataProgressBar">
                        <img src="~/images/loader.gif" class="processing-image" alt="Processing" />
                    </div>
                    <div id="divMessage"></div>
                    <table class="table table-bordered table-striped table-hover">
                    </table>
                </div>

            </div>
        </div>
    </div>
    <!-- #END# Basic Examples -->

</div>


@section Scripts {

    <script type="text/javascript">
        $(function () {
            LoadData();
            ManageAddNew();
        })
        function ManageAddNew() {
            var path = window.location.pathname.split("/");
            path = path.filter(s => s !== "");
            var url = "/" + path[0] +  "/Create";
            if (path[2]) {
                url+="/"+path[2]
            }
            $("#createForm").attr("action",url)
        }
    </script>
}
